{
  "manifest_version": 2,
  "name": "UDP Hello World",
  "version": "1",
  "minimum_chrome_version": "23",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions": [
    {
      "socket": [
        "udp-bind",
        "udp-send-to"
      ]
    }
  ]
}
